<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
 
<BorderPane prefHeight="720.0" prefWidth="1080.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="famiglia.sapori.controller.PrenotazioniController">
 
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-bar">
            <padding><Insets bottom="15.0" left="20.0" right="20.0" top="15.0" /></padding>
            <Label styleClass="header-title" text="Gestione Prenotazioni" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleBack" styleClass="logout-button" text="Torna in Sala" />
        </HBox>
    </top>
 
    <center>
        <HBox spacing="20.0" styleClass="main-container">
            <VBox spacing="10.0" HBox.hgrow="ALWAYS" styleClass="panel-container">
                <padding><Insets bottom="15" left="15" right="15" top="15" /></padding>
               
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label styleClass="section-title" text="Prenotazioni Future" />
                    <HBox HBox.hgrow="ALWAYS" />
                    <TextField fx:id="txtCerca" promptText="Cerca cliente..." styleClass="input-field" />
                </HBox>
 
                <TableView fx:id="tablePrenotazioni" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colOrario" text="Data/Ora" prefWidth="120" />
                        <TableColumn fx:id="colNome" text="Cliente" prefWidth="150" />
                        <TableColumn fx:id="colPax" text="Pax" prefWidth="50" />
                        <TableColumn fx:id="colTavolo" text="Tavolo" prefWidth="80" />
                        <TableColumn fx:id="colTel" text="Telefono" prefWidth="100" />
                        <TableColumn fx:id="colNote" text="Note" prefWidth="200" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
               
                <Button onAction="#handleElimina" text="Elimina Selezionata" styleClass="secondary-button" style="-fx-background-color: #c0392b; -fx-text-fill: white;" />
            </VBox>
 
            <VBox spacing="15.0" minWidth="350.0" maxWidth="400.0" styleClass="login-card">
                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
               
                <Label styleClass="highlight-label" text="Nuova Prenotazione" />
               
                <VBox spacing="5.0">
                    <Label styleClass="field-label" text="NOME CLIENTE" />
                    <TextField fx:id="txtNome" styleClass="input-field" promptText="Mario Rossi" />
                </VBox>
               
                <HBox spacing="10.0">
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="TELEFONO" />
                        <TextField fx:id="txtTelefono" styleClass="input-field" promptText="333..." />
                    </VBox>
                    <VBox spacing="5.0" minWidth="80.0">
                        <Label styleClass="field-label" text="PAX" />
                        <Spinner fx:id="spinPax" styleClass="input-field" editable="true" />
                    </VBox>
                </HBox>
 
                <HBox spacing="10.0">
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="DATA" />
                        <DatePicker fx:id="datePicker" styleClass="input-field" />
                    </VBox>
                    <VBox spacing="5.0" maxWidth="80.0">
                        <Label styleClass="field-label" text="ORA" />
                        <TextField fx:id="txtOra" styleClass="input-field" promptText="20:00" />
                    </VBox>
                </HBox>
 
                <VBox spacing="5.0">
                    <Label styleClass="field-label" text="TAVOLO" />
                    <ComboBox fx:id="comboTavolo" styleClass="input-field" maxWidth="Infinity" promptText="Seleziona Tavolo..." />
                </VBox>
 
                <VBox spacing="5.0">
                    <Label styleClass="field-label" text="NOTE" />
                    <TextArea fx:id="txtNote" styleClass="input-field" style="-fx-text-fill: black;" prefHeight="80.0" wrapText="true" promptText="Intolleranze, seggioloni..." />
                </VBox>
 
                <Button onAction="#handleSalva" text="Registra Prenotazione" styleClass="primary-button" maxWidth="Infinity" />
            </VBox>
        </HBox>
    </center>
</BorderPane>