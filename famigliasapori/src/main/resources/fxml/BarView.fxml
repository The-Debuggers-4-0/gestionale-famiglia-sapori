<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
 
<BorderPane prefHeight="720.0" prefWidth="1080.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="famiglia.sapori.controller.BarController">
 
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-bar">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <Label styleClass="header-title" text="Bar - Comande in Arrivo" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="Esci" />
        </HBox>
    </top>
 
    <center>
        <SplitPane dividerPositions="0.7" styleClass="dark-split-pane">
            <items>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="dark-scroll-pane">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <FlowPane fx:id="ordersContainer" hgap="20.0" prefWrapLength="800.0" vgap="20.0">
                    </FlowPane>
                </ScrollPane>
                <VBox spacing="15.0" style="-fx-background-color: #2c3e50;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label styleClass="section-title" text="Gestione Bevande" />
                    <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;" text="Segnala le bevande non disponibili" wrapText="true" />
                   
                    <TextField fx:id="searchField" promptText="Cerca bevanda..." styleClass="input-field" style="-fx-border-color: #7f8c8d; -fx-border-width: 1; -fx-background-color: #34495e;" />
                   
                    <ListView fx:id="drinksList" styleClass="dark-list-view" VBox.vgrow="ALWAYS" />
                </VBox>
            </items>
        </SplitPane>
    </center>
 
</BorderPane>